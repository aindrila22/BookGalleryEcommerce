<section class="status">
    <div class="container mx-auto px-10 pb-6">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12 flex-col md:flex-row">
                <h1 class=" text-lg sm:text-xl font-bold">Track Current Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-purple-600 text-xs sm:text-sm"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul class="pt-5">
                <li class="status_line text-base sm:text-xl pb-16 " data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-base sm:text-xl pb-16 " data-status="confirmed"><span>Confirmed</span></li>
                <li class="status_line text-base sm:text-xl pb-16" data-status="packaged"><span>Packed</span></li>
                <li class="status_line text-base sm:text-xl pb-16" data-status="delivered"><span>On The Way </span></li>
                <li class="status_line text-base sm:text-xl " data-status="completed"><span>Delivered</span></li>
            </ul>
        </div>
    </div>
</section>